<table>
  <tr>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Description</th>
    <th>Owner ID</th>
    <th> </th>

  </tr>
    <% @buildings.each do |building|%>
  <tr>
    <td><%= building.address %></td>
    <td><%= building.city %></td>
    <td><%= building.state %></td>
    <td><%= building.zip %></td>
    <td><%= building.description %></td>
    <td><%= building.owner_id %></td>
    <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
  <% end %>
</table>
