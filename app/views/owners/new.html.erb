  <%= simple_form_for @owner do |f| %>
    <%= f.input :first_name  %>
    <%= f.input :last_name  %>
    <%= f.input :email  %>
    <%= f.input :company  %>
    <%= f.button :submit, "Add Owner"  %>
  <% end %>
